<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navgraph"
    app:startDestination="@id/fragment1">
    <fragment
        android:id="@+id/fragment1"
        android:name="com.example.login.fragments.Fragment1"
        android:label="fragment1_fragment"
        tools:layout="@layout/fragment1_fragment" >
        <action
            android:id="@+id/action_fragment1_to_transaction"
            app:destination="@id/transaction" />
    </fragment>
    <fragment
        android:id="@+id/fragment2"
        android:name="com.example.login.fragments.Fragment2"
        android:label="fragment2_fragment"
        tools:layout="@layout/fragment2_fragment" >
        <argument
            android:name="valor"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/transaction"
        android:name="com.example.login.fragments.TransactionFragment"
        android:label="transaction_fragment"
        tools:layout="@layout/transaction_fragment">
    </fragment>
</navigation>